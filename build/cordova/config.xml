<?xml version='1.0' encoding='utf-8'?>
<widget id="com.devbaltasarq.csa" version="1.2.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Cacahuetes, sal y aceite</name>
    <description>
        Ficción interactiva onírica. Oneiric interactive fiction.
        Despiertas atontado... en un cubo regular de acero.
    </description>
    <author email="baltasarq@gmail.com" href="http://caad.es/baltasarq/">
        Baltasar
    </author>
    <icon src="cfg/res/mipmap-xxxhdpi/ic_launcher.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <platform name="android">
            <icon density="hdpi" src="cfg/res/mipmap-hdpi/ic_launcher.png" />
            <icon density="mdpi" src="cfg/res/mipmap-mdpi/ic_launcher.png" />
            <icon density="xhdpi" src="cfg/res/mipmap-xhdpi/ic_launcher.png" />
            <icon density="xxhdpi" src="cfg/res/mipmap-xxhdpi/ic_launcher.png" />
            <icon density="xxhdpi" src="cfg/res/mipmap-xxxhdpi/ic_launcher.png" />
        </platform>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~7.1.4" />
</widget>
